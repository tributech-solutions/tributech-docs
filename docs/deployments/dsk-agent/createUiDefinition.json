{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "agentName",
        "type": "Microsoft.Common.TextBox",
        "label": "Agent name",
        "defaultValue": "[concat('dsk-agent-', substring(guid(), 0, 8))]",
        "toolTip": "Unique agent name (also used for naming Azure resources like VM, NSG,...).",
        "constraints": {
          "required": true,
          "validations": [
            {
              "regex": "^([a-z0-9A-Z][a-z0-9A-Z-]{0,62}[a-z0-9A-Z])$",
              "message": "The name must be between 2 and 64 characters, begin and end with a letter or number and may contain only letters, numbers or hyphens."
            }
          ]
        },
        "visible": true
      }
    ],
    "steps": [
      {
        "name": "vm",
        "label": "VM",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Size",
            "toolTip": "e.g. Standard_B1ms, Standard_DS1_v2, Standard_B1s",
            "recommendedSizes": [
              "Standard_B1ms",
              "Standard_DS1_v2",
              "Standard_B1s"
            ],
            "options": {
              "hideDiskTypeFilter": false
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "0001-com-ubuntu-server-focal",
              "sku": "20_04-lts-gen2"
            },
            "count": 1,
            "visible": true
          },
          {
            "name": "adminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "toolTip": "Admin username for the virtual machine",
            "osPlatform": "Linux",
            "defaultValue": "tributech",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "credentials",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "authenticationType": "Authentication type",
              "password": "Password",
              "confirmPassword": "Confirm password",
              "sshPublicKey": "SSH public key"
            },
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": false,
              "hidePassword": false
            },
            "osPlatform": "Linux",
            "visible": true
          },
          {
            "name": "allowSsh",
            "type": "Microsoft.Common.DropDown",
            "label": "Allow SSH",
            "defaultValue": "True",
            "toolTip": "Allow SSH traffic through the firewall",
            "constraints": {
              "allowedValues": [
                {
                  "label": "True",
                  "value": true
                },
                {
                  "label": "False",
                  "value": false
                }
              ],
              "required": true
            },
            "visible": true
          }
        ]
      },
      {
        "name": "dsk",
        "label": "DSK",
        "elements": [
          {
            "name": "agentId",
            "type": "Microsoft.Common.TextBox",
            "label": "DSK Agent id",
            "defaultValue": "[guid()]",
            "toolTip": "The unique id (UUID) for the agent.",
            "constraints": {
              "required": true,
              "regex": "^[{|(]?[0-9a-fA-F]{8}[-]?([0-9a-fA-F]{4}[-]?){3}[0-9a-fA-F]{12}[)|}]?$",
              "validationMessage": "Must be a valud UUID (e.g. '87183121-b069-44d0-8015-01b8d256729e')."
            },
            "visible": true
          },
          {
            "name": "hubName",
            "type": "Microsoft.Common.TextBox",
            "label": "DSK Hub name",
            "toolTip": "The DSK Hub name (e.g. dev for dev.dataspace-hub.com) to which the DSK Node is connected.",
            "constraints": {
              "required": true
            },
            "visible": true
          },
          {
            "name": "nodeName",
            "type": "Microsoft.Common.TextBox",
            "label": "DSK Node name",
            "toolTip": "The DSK Node name (e.g. dev-node-a for dev-node-a.dataspace-node.com) to which the Agent will be linked.",
            "constraints": {
              "required": true
            },
            "visible": true
          },
          {
            "name": "lokiPromtailPw",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Promtail (Loki push API) password",
              "confirmPassword": "Confirm"
            },
            "toolTip": "The DSK Node Promtail (Loki push API) password (see Account -> Administration -> API-Keys in DataSpace-Admin).",
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": true
            },
            "visible": true
          },
          {
            "name": "dockerRegistryTokenName",
            "type": "Microsoft.Common.TextBox",
            "label": "Docker Registry Token (DSK Edge) name",
            "defaultValue": "tributech-io-dsk-edge",
            "toolTip": "The name of the token/user used for authentication at the Docker Registry/Azure Container Registry (ACR).",
            "constraints": {
              "required": true
            },
            "visible": true
          },
          {
            "name": "dockerRegistryToken",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Docker Registry Token (DSK Edge) secret",
              "confirmPassword": "Confirm"
            },
            "toolTip": "The access token/password used for authentication at the Docker Registry/Azure Container Registry (ACR).",
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": true
            },
            "visible": true
          },
          {
            "name": "agentImageTag",
            "type": "Microsoft.Common.TextBox",
            "label": "DSK Agent Docker Image Tag",
            "defaultValue": "2.0.5",
            "toolTip": "The version tag of the DSK Edge Agent service Docker Image.",
            "constraints": {
              "required": true
            },
            "visible": true
          },
          {
            "name": "dockerComposeOverrideFileUrl",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Additional DSK Edge Source services",
            "defaultValue": "None",
            "toolTip": "Select additional DSK Edge services which should be deployed along with the DSK Agent and the MQTT broker (mosquitto).",
            "constraints": {
              "allowedValues": [
                {
                  "label": "None",
                  "value": ""
                },
                {
                  "label": "DSK Edge Simulated Sensor",
                  "value": "https://raw.githubusercontent.com/tributech-solutions/tributech-dsk-docs/master/versioned_docs/version-2.0.X/deployments/dsk-agent/simulated-sensor/docker-compose.override.yml"
                },
                {
                  "label": "OPC UA Source and Server/Simulator",
                  "value": "https://raw.githubusercontent.com/tributech-solutions/tributech-dsk-docs/master/versioned_docs/version-2.0.X/deployments/dsk-agent/opcua/docker-compose.override.yml"
                }
              ],
              "required": true
            },
            "visible": true
          },
          {
            "name": "sourceImageTag",
            "type": "Microsoft.Common.TextBox",
            "label": "DSK Source Docker Image Tag",
            "defaultValue": "2.0.5",
            "toolTip": "The version tag of the additional DSK Source service Docker Image.",
            "constraints": {
              "required": true
            },
            "visible": "[not(equals(steps('dsk').dockerComposeOverrideFileUrl,''))]"
          }
        ]
      }
    ],
    "outputs": {
      "agentName": "[basics('agentName')]",
      "vmSize": "[steps('vm').vmSize]",
      "adminUsername": "[steps('vm').adminUsername]",
      "authenticationType": "[steps('vm').credentials.authenticationType]",
      "adminPasswordOrKey": "[coalesce(steps('vm').credentials.password, steps('vm').credentials.sshPublicKey)]",
      "allowSsh": "[bool(steps('vm').allowSsh)]",
      "dockerRegistryTokenName": "[steps('dsk').dockerRegistryTokenName]",
      "dockerRegistryToken": "[steps('dsk').dockerRegistryToken]",
      "agentImageTag": "[steps('dsk').agentImageTag]",
      "sourceImageTag": "[coalesce(steps('dsk').sourceImageTag, '')]",
      "agentId": "[steps('dsk').agentId]",
      "hubName": "[steps('dsk').hubName]",
      "nodeName": "[steps('dsk').nodeName]",
      "lokiPromtailPw": "[steps('dsk').lokiPromtailPw]",
      "dockerComposeOverrideFileUrl": "[steps('dsk').dockerComposeOverrideFileUrl]"
    }
  }
}
